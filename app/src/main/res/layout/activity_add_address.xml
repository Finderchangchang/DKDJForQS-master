<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <net.tsz.afinal.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbai"
        app:center_tv="新增地址"
        app:right_iv="@mipmap/save_address" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_poi_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/send_address_tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="收藏地址"
                android:textColor="#000" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/address_normal" />

            <TextView
                android:id="@+id/address_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区/大厦/交叉路口" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorhuixian" />

        <EditText
            android:id="@+id/mp_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:paddingLeft="85dp"
            android:hint="楼层/门牌号"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
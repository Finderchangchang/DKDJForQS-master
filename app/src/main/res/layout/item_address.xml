<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbai"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北海公园"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/address_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北海公园"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/address_bc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北海公园"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:background="#ddd"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/delete_address_ll"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/mark_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消收藏"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_address_ll"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/delete_address_ll"
            android:layout_toStartOf="@+id/delete_address_ll"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/edit_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑收藏"
                android:textColor="#555555" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
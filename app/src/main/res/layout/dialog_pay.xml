<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="付款详情"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dialog_close_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/dialog_close" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F1F1F1" />

    <TextView
        android:id="@+id/zf_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="需支付金额"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pay_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="10.00元"
        android:textColor="#00d8d8"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#F1F1F1" />

    <RelativeLayout
        android:id="@+id/wx_pay_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wx_pay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/wx_pay" />

        <TextView
            android:id="@+id/wx_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wx_pay_iv"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/wx_pay_iv"
            android:layout_toRightOf="@+id/wx_pay_iv"
            android:text="微信支付"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wx_pay_iv"
            android:layout_alignLeft="@+id/wx_pay_tv"
            android:layout_alignStart="@+id/wx_pay_tv"
            android:text="推荐安装微信5.0及以上版本使用"
            android:textColor="#999999" />

        <CheckBox
            android:id="@+id/wx_cb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cb_bg"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F1F1F1" />

    <RelativeLayout
        android:id="@+id/zfb_pay_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zfb_pay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zfb_pay" />

        <TextView
            android:id="@+id/zfb_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zfb_pay_iv"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/zfb_pay_iv"
            android:layout_toRightOf="@+id/zfb_pay_iv"
            android:text="支付宝支付"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zfb_pay_iv"
            android:layout_alignLeft="@+id/zfb_pay_tv"
            android:layout_alignStart="@+id/zfb_pay_tv"
            android:text="推荐有支付宝账号的用户使用"
            android:textColor="#999999" />

        <CheckBox
            android:id="@+id/zfb_cb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cb_bg"
            android:button="@null" />
    </RelativeLayout>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dk_blue"
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="18sp" />
</LinearLayout>
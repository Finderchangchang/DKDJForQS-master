<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.tsz.afinal.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f3f3f3"
        app:center_tv="找回密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="设置密码前请先完成验证，已发送短信到"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="180****7521"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/code_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/code_bg"
            android:hint="请输入验证码"
            android:paddingLeft="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/getcode_btn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/code_bg"
            android:text="获取验证码"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/code_bg"
        android:hint="新密码"
        android:paddingLeft="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pwd_confirm_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/code_bg"
        android:hint="确认密码"
        android:paddingLeft="5dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/reg_user_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/code_bg"
        android:text="下一步"
        android:textSize="14sp" />
</LinearLayout>